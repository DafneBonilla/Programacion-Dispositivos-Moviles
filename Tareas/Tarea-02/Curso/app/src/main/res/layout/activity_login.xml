<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_app"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_inicio"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="104dp"
        android:fontFamily="@font/louis_george_rg"
        android:importantForAccessibility="no"
        android:text="@string/txt_inicio"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="324dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:drawableEnd="@drawable/ic_email"
        android:hint="@string/txt_correo"
        android:fontFamily="@font/louis_george_rg"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_inicio"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="324dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="@string/txt_password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/ic_lock"
        android:fontFamily="@font/louis_george_rg"
        android:shadowColor="#00FFFFFF"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_email" />

    <Button
        android:id="@+id/button"
        android:layout_width="254dp"
        android:layout_height="52dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/louis_george_rg"
        android:text="@string/text_continuar"
        android:textColor="#000000"
        android:textSize="20sp"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toTopOf="@+id/text_aviso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_password" />

    <RadioButton
        android:id="@+id/rb_mantener"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="45dp"
        android:layout_weight="40"
        android:filterTouchesWhenObscured="false"
        android:fontFamily="@font/louis_george_rg"
        android:shadowColor="#0082BBE6"
        android:text="@string/rb_mantenerSesion"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_password" />

    <TextView
        android:id="@+id/text_aviso"
        android:layout_width="297dp"
        android:layout_height="33dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="83dp"
        android:fontFamily="@font/louis_george_rg"
        android:gravity="center"
        android:text="@string/text_aviso"
        android:textColor="#747171"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</android.support.constraint.ConstraintLayout>