<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_app"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_inicio"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="104dp"
        android:fontFamily="@font/louis_george_rg"
        android:importantForAccessibility="no"
        android:text="@string/txt_registrarse"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_name"
        android:layout_width="324dp"
        android:layout_height="50dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/ic_person"
        android:ems="10"
        android:fontFamily="@font/louis_george_rg"
        android:hint="@string/txt_name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#000000"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_inicio"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="324dp"
        android:layout_height="50dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/ic_email"
        android:ems="10"
        android:fontFamily="@font/louis_george_rg"
        android:hint="@string/txt_correo"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#000000"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="324dp"
        android:layout_height="50dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/ic_lock"
        android:ems="10"
        android:fontFamily="@font/louis_george_rg"
        android:hint="@string/txt_password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:shadowColor="#00FFFFFF"
        android:textColor="#000000"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_email" />

    <Button
        android:id="@+id/bt_continue_register"
        android:layout_width="254dp"
        android:layout_height="52dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="79dp"
        android:background="@drawable/rounded_button"
        android:clickable="true"
        android:fontFamily="@font/louis_george_rg"
        android:text="@string/txt_continuar"
        android:textColor="#FBFBFB"
        android:textSize="20sp"
        android:textStyle="bold"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_password" />

    <TextView
        android:id="@+id/txt_aviso"
        android:layout_width="297dp"
        android:layout_height="33dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="57dp"
        android:fontFamily="@font/louis_george_rg"
        android:gravity="center"
        android:text="@string/txt_aviso"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_continue_register" />

    <TextView
        android:id="@+id/txt_inicio_sesion_registrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="55dp"
        android:fontFamily="@font/louis_george_rg"
        android:text="@string/txt_inicio_sesion_registrarse"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_iniciar_sesion_button"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_iniciar_sesion_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="55dp"
        android:fontFamily="@font/louis_george_rg"
        android:text="@string/txt_iniciar_sesion_button"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_inicio_sesion_registrarse" />

    <TextView
        android:id="@+id/txt_contraseña_sugerencia"
        android:layout_width="272dp"
        android:layout_height="24dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/louis_george_rg"
        android:gravity="clip_horizontal"
        android:text="@string/txt_contraseña_sugerencia"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_password"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

</android.support.constraint.ConstraintLayout>